<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.arpitshah.ecomapp.activities.LoginActivity"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:background="#fff"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rCategory">

            <ImageView
                android:layout_width="105dp"
                android:layout_height="75dp"
                android:id="@+id/imageProd"

                android:src="@drawable/chaiback"
                tools:ignore="NotSibling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageProd"
                android:padding="@dimen/edtlayoutMargin"
                android:id="@+id/prodName"
                android:text="Product Name"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>

