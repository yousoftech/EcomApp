<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill your details"
        android:textAlignment="center"
        android:layout_margin="@dimen/edtlayoutMargin"
        android:padding="@dimen/edtlayoutMargin"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edtfname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_margin="@dimen/edtlayoutMargin"
        android:padding="@dimen/edtlayoutMargin"
        android:hint="Enter First Name"
        android:textAlignment="center"
        android:background="@drawable/edt_border"/>
    <EditText
        android:id="@+id/edtlname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtfname"
        android:layout_margin="@dimen/edtlayoutMargin"
        android:padding="@dimen/edtlayoutMargin"
        android:hint="Enter Last Name"
        android:textAlignment="center"
        android:background="@drawable/edt_border"
        />

    <EditText
        android:id="@+id/edtpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtlname"
        android:layout_margin="@dimen/edtlayoutMargin"
        android:padding="@dimen/edtlayoutMargin"
        android:hint="Enter Password"
        android:textAlignment="center"
        android:inputType="textPassword"

        android:background="@drawable/edt_border"/>

    <EditText
        android:id="@+id/edtrepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtpassword"
        android:layout_margin="@dimen/edtlayoutMargin"
        android:padding="@dimen/edtlayoutMargin"
        android:hint="Confirm Password"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:background="@drawable/edt_border"/>
    <Button
        android:id="@+id/btnfinish"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edtlayoutMargin"
        android:padding="@dimen/edtlayoutMargin"
        android:layout_below="@+id/edtrepassword"
        android:text="FINISH"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textStyle="bold"
        android:background="@drawable/button_round"

        />

</RelativeLayout>
